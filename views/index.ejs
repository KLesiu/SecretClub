<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%- include('head-connects') %>
  </head>
  <body>
    <%- include('nav') %>
    <main>
      <h1>Messages</h1>
      <%  if(messages){
        %>
        <% for(message in messages){
          %>
          <div class="messageHolder">
            
            <h3><%= messages[messages.length-1-message].title %></h3>
            
            <p><%= messages[messages.length-1-message].message %></p>
            <h4>Created by:<% if(user){%> <% if(user.member){%> <%= messages[messages.length-1-message].user.name %> <%} else{ %> Anonymous (You have to be a club member to see authors) <%} %> <%} else{%> Anonymous <%} %></h4>
          </div>
          <%
        } %>
        <%
      } %>
    </main>
    <%- include('footer') %>
    <% if(user){%>
      <script type="module" src="/javascripts/join-club.js"></script>
      <%} %>
    
  </body>
</html>
